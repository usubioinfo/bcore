{% macro serviceCard(serviceItem) %}
  <div class="service-card my-3 pb-3 mx-auto">
    <div class="img-container mb-2">
      <img src="{{ serviceItem.imgLink }}" alt="Service image"/>
    </div>

    <div class="content-container px-3">
      <header>
        <h4 class="heavy">{{ serviceItem.name }}</h4>
      </header>
      <p class="mt-3 content">{{ serviceItem.content }}</p>

      <a class="learn-more" href="{{ serviceItem.learnMore }}">Learn more</a>
    </div>
  </div>
{% endmacro %}