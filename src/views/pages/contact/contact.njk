{% extends "templates/main.template.njk" %}

{% block content %}
	<section class="kbl-content-wrapper">
		<!-- Page titlebar start -->
		<article class="content-section decorated-bg page-titlebar">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<h1 class="title">contact us</h1>
						<ol class="breadcrumb">
							<li class="active">Contact</li>
						</ol>
					</div>
				</div>
			</div>
		</article><!-- Page titlebar end -->
		<!-- Map start -->
		<div class="gmap-responsive">
			<iframe width="1000" height="500" src="http://maps.google.com/maps?maptype=satellite&q=41.742693,-111.810340&amp;z=15&amp;output=embed" allowfullscreen frameborder="0"></iframe>
		</div><!-- Map end -->
		<!-- Contacts start -->
		<article class="content-section">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="contact-container">
							<section class="contact-top palette-2-bg px-4 pt-3">
								<h3 class="heavy">Contact Us</h3>
								<div class="py-2">
									<div class="py-1">Bioinformatics and HPC Facility</div>
									<div class="py-1">4700 Old Main Hill</div>
									<div class="py-1">Logan, UT 84322-4700</div>
									<div class="py-1">1 (435) 797-2753</div>
									<div class="py-1"><a href="mailto:rkaundal@usu.edu" class="d-block">bioinfocore@usu.edu</a></div>
								</div>
							</section>

							<section class="contact-bottom palette-4-bg px-4 pb-2 pt-3">
								<h3 class="heavy">Send Us A Message</h3>
								<p>Feel free to drop us a line below.</p>
								<div class="row">
									<div id="contact-form" class="col-12">
										<div class="form-group my-3"><input type="text" id="formName" placeholder="Name" name="comment-name" class="form-control"></div>
										<div class="form-group my-3"><input type="email" id="formEmail" placeholder="Email" name="comment-email" class="form-control"></div>
										<div class="form-group my-3"><input type="tel" id="formPhone" placeholder="Phone" name="comment-phone" class="form-control"></div>
										<div class="form-group my-3"><textarea rows="10" id="formMessage" placeholder="Send us a message!" name="comment-message" class="form-control"></textarea></div>
										<div class="form-group text-center my-3"><button id="send" class="btn kbl-btn-1">Send Your Request</button></div>
									</div>
								</div>
							</section>
						</div>
					</div>
				</div>
			</div>
		</article>
	</section>

	<script src="js/kbl/contact.js"></script>
{% endblock %}
