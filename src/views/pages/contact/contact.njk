{% extends "templates/main.template.njk" %}

{% block content %}
	<section class="kbl-content-wrapper">
		<!-- Page titlebar start -->
		<article class="content-section decorated-bg page-titlebar">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<h1 class="title">contact us</h1>
						<ol class="breadcrumb">
							<li class="active">Contact</li>
						</ol>
					</div>
				</div>
			</div>
		</article><!-- Page titlebar end -->
		<!-- Map start -->
		<div class="gmap-responsive">
			<iframe width="1000" height="500" src="http://maps.google.com/maps?maptype=satellite&q=41.742693,-111.810340&amp;z=15&amp;output=embed" allowfullscreen frameborder="0"></iframe>
		</div><!-- Map end -->
		<!-- Contacts start -->
		<article class="content-section contacts-page-section">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="contacts-page-content">
							<section class="content-block palette-2-bg left">
								<h3 class="heavy">Contact us</h3>
								<div class="widget widget-contacts">
									<div class="widget-content">
										<p class="title text-heading">Bioinformatics and HPC Facility</p>
										<p class="address">4700 Old Main Hill<br>Logan, UT 84322-4700 </p>
										<p class="phone">1 (435) 797-2753</p>
										<p class="email"><a href="#contact-form">biocore.usu.edu@mail.com</a></p>
									</div>
								</div>
							</section>
					<a name="contact-form" id="contact-form"></a>
							<section class="content-block palette-4-bg right">
								<h3 class="heavy">send us a message</h3>
								<p>Feel free to drop us a line below.</p>
								<div class="row">
									<div id="contact-form" class="col-12">
										<div class="form-group contacts-form-result"><strong></strong></div>
										<div class="form-group"><input type="text" id="formName" placeholder="Name" name="comment-name" class="form-control"></div>
										<div class="form-group"><input type="email" id="formEmail" placeholder="Email" name="comment-email" class="form-control"></div>
										<div class="form-group"><input type="tel" id="formPhone" placeholder="Phone" name="comment-phone" class="form-control"></div>
										<div class="form-group"><textarea rows="10" id="formMessage" placeholder="Send us a message!" name="comment-message" class="form-control"></textarea></div>
										<div class="form-group text-center"><button id="send" class="btn kbl-btn-1">Send Your Request</button></div>
									</div>
								</div>
							</section>
						</div>
					</div>
				</div>
			</div>
		</article>
	</section>
{% endblock %}
