{% extends "templates/main.template.njk" %}

{% block content %}
	<article class="kbl-content-wrapper">
		<!-- Page titlebar start -->
		<section class="content-section decorated-bg page-titlebar">
			<div class="container-fluid px-5">
				<div class="row px-5">
					<div class="col-lg-12">
						<h1 class="title">frequently asked questions</h1>
						<ol class="breadcrumb">
							<li class="active">FAQ</li>
						</ol>
					</div>
				</div>
			</div>
		</section><!-- Page titlebar end -->

		{% include "components/home/welcome.njk" %}
		
		<!-- Page content start -->
		<div class="content-section">
			<div class="container-fluid px-5">
				<div class="row px-5">
					<section class="col-md-8">
						<h2>Frequently Asked Questions</h2>
						
						{% from "./faqdata/rnaseq.njk" import faqRnaSeq %}
						{% from "./faqdata/go.njk" import faqGo %}
						{% from "./faqdata/metseq.njk" import faqMetSeq %}

						<h3 class="faq-header">RNA-seq</h3>
						<div class="clearfix"></div>
						<section data-rt-accordion data-rt-accordion-toggle="on" class="rt-accordion">

							{% for faq in faqRnaSeq %}
								<div data-rt-accordion-item class="rt-accordion-item">
									<header>
										<p class="title">{{ faq.question }}</p>
									</header>
									<div class="content">
										{{ faq.content | safe }}
									</div>
								</div>
							{% endfor %}
						</section>

						<h3 class="faq-header">Gene Ontology Enrichment Analysis</h3>
						<div class="clearfix"></div>
						<section data-rt-accordion data-rt-accordion-toggle="on" class="rt-accordion">

							{% for faq in faqGo %}
								<div data-rt-accordion-item class="rt-accordion-item">
									<header>
										<p class="title">{{ faq.question }}</p>
									</header>
									<div class="content">
										{{ faq.content | safe }}
									</div>
								</div>
							{% endfor %}
						</section>

						<h3 class="faq-header">Methyl-Seq</h3>
						<div class="clearfix"></div>
						<section data-rt-accordion data-rt-accordion-toggle="on" class="rt-accordion">

							{% for faq in faqMetSeq %}
								<div data-rt-accordion-item class="rt-accordion-item">
									<header>
										<p class="title">{{ faq.question }}</p>
									</header>
									<div class="content">
										{{ faq.content | safe }}
									</div>
								</div>
							{% endfor %}
						</section>

					</section>
					<section class="col-md-4">
						{% from "components/svc-sidebar/svc-sidebar.njk" import sidebar %}
						{{ sidebar() }}
					</section>
				</div>
			</div>
		</div>
	</article>
{% endblock %}
